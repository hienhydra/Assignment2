<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane cache="true" cacheHint="SCALE" prefHeight="566.0" prefWidth="837.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainMenuController">
   <children>
      <ImageView fitHeight="566.0" fitWidth="837.0" layoutX="1.0" pickOnBounds="true">
         <image>
            <Image url="@../img/background.jpg" />
         </image>
      </ImageView>
      <VBox layoutX="14.0" layoutY="20.0" prefHeight="343.0" prefWidth="237.0">
         <children>
            <Button fx:id="startGameBt" contentDisplay="CENTER" mnemonicParsing="false" onAction="#startGameBtHandler" prefHeight="64.0" prefWidth="126.0" text="Start Game" textAlignment="CENTER">
               <VBox.margin>
                  <Insets left="50.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="exitGameBt" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="64.0" prefWidth="126.0" text="Exit Game">
               <VBox.margin>
                  <Insets left="50.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="soundBt" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#soundBtHandler" prefHeight="64.0" prefWidth="126.0" text="Button">
               <VBox.margin>
                  <Insets left="50.0" top="10.0" />
               </VBox.margin>
               <graphic>
                  <ImageView fitHeight="51.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/soundOn.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
   </children>
</Pane>
